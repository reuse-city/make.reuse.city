<header class="jumbotron bg-inverse text-center center-vertically" role="banner">
  <div class="container">
    <h1 class="display-3">{{ site.header.title }}</h1>
    <h2 class="m-b-lg">{{ site.header.description|raw }}</h2>
    {% for item in site.header.buttons %}
    <a class="btn btn-secondary-outline m-b-md" href="{{ item.url }}" role="button"><span class="icon-{{ item.icon }}"></span>{{ item.text }}</a>
    {% endfor %}
    <ul class="list-inline social-share">
        <li><a class="nav-link" href="https://twitter.com/reuse_city"><img src="user/themes/landio/css/fonts/icomoon/SVG/twitter-bright.svg"></a></li>
        <li><a class="nav-link" href="https://github.com/reuse-city/lab/"><img src="user/themes/landio/css/fonts/icomoon/SVG/github-bright.svg"></a></li>
        <li><a class="nav-link" href="https://www.youtube.com/playlist?list=PLSHdLCc8rAqvn9bf4-96V3M8k3jdctzz9"><img src="user/themes/landio/css/fonts/icomoon/SVG/youtube-bright.svg"></a></li>
    </ul>
